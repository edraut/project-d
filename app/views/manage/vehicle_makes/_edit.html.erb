<% vehicle_make = edit %>
<% form_for :vehicle_make, vehicle_make,
	:url => manage_vehicle_make_url(vehicle_make),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "vehicle_make_#{vehicle_make.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#vehicle_make_#{vehicle_make.id}').removeClass('editing');",
		:id => "edit_vehicle_make_form_#{vehicle_make.id}"
	} do |f| %>
	<div class="span-12 last">
				<div class="span-5">
			<%= vehicle_make.first_error_on :name %>
			<%= f.text_field :name, :class => 'textfield-5' %>
		</div>
		
		<div class="span-7 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_vehicle_make_url(vehicle_make),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "vehicle_make_#{vehicle_make.id}",
	:ajax_success_callback => "$('#vehicle_make_#{vehicle_make.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
