<% product_size = new %>
Add a new product size</br>
<% form_for :product_size, product_size, :url => manage_product_sizes_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'product_size_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#product_size_new_link').click();",
		:ajax_error_element => 'product_size_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= product_size.first_error_on :name %>
			<%= f.text_field :name, :size => '12' %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_product_size_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'product_size_new',
	:id => 'product_size_new_link'
	%>