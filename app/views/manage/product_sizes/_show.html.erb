<% product_size = show %>
<div class="span-6 last">
<div class="span-3">
<%= product_size.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_product_size_url(product_size),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "product_size_#{product_size.id}",
	:ajax_success_callback => "$('#product_size_#{product_size.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_product_size_url(product_size),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#product_size_#{product_size.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this product_size?' %>
</div>
</div>