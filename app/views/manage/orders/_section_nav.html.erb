<div class="span-24 last dash-frame-color padding-bottom product-section-nav">
	<div class="span-4 text-center <% if @state == 'pending' %>selected<% end %>">
		<%= link_to 'pending', manage_orders_url + '?state=pending' %>
	</div>
	<div class="span-4 text-center <% if @state == 'fulfilled' %>selected<% end %>">
		<%= link_to 'shipped', manage_orders_url + '?state=fulfilled' %>
	</div>
	<div class="span-4 text-center <% if @state == 'card_rejected' %>selected<% end %>">
		<%= link_to 'rejected', manage_orders_url + '?state=card_rejected' %>
	</div>
	<div class="span-4 text-center <% if controller_name == 'coupons' %>selected<% end %>">
		<%= link_to 'coupons', manage_coupons_url %>
	</div>
	<div class="span-4">&nbsp;</div>
	<div class="span-4 last text-center">
		<div class="span-1">search:</div>
		<div class="span-3 last">
			<form action="/manage/orders">
				<input type="text" name="search_terms" class="span-2"/>
				<input type="submit" value="Go"/>
			</form>
		</div>
	</div>
</div>