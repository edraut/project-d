<% order = show %>
<div class="span-18 last">
<div class="span-3">
<%= order.id %>
</div>
<div class="span-3">
<%= order.billing_address.full_name %>
</div>
<div class="span-3">
<%= order.total.format %>
</div>
<div class="span-3">
<%= order.created_at.strftime("%m/%d/%y") %>
</div>
<div class="span-3">
	<% if order.state == 'fulfilled' %>
		<%= order.shipped_at.strftime("%m/%d/%y") %>
	<% else %>
		-
	<% end %>
</div>

<div class="span-3 last">
<%= link_to 'show details', manage_order_url(order) + '?version=full' %>
</div>
</div>