<% product_option_vehicle_model = new_checkbox %>
<% form_for :product_option_vehicle_model, product_option_vehicle_model, :url => manage_product_option_vehicle_models_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "product_option_vehicle_model_list_#{product_option_vehicle_model.product_option_id}",
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#product_option_vehicle_model_new_#{product_option_vehicle_model.vehicle_model_id}').remove();",
		:ajax_error_element => "product_option_vehicle_model_new_#{product_option_vehicle_model.vehicle_model_id}",
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-8 last">
		<div class="span-3" style="overflow: hidden">
			<%= product_option_vehicle_model.vehicle_model.name %>
			<%= f.hidden_field :vehicle_model_id %>
			<%= f.hidden_field :product_option_id %>
		</div>
		<div class="span-1_5 column">
			<%= product_option_vehicle_model.first_error_on :year_begin %>
			<%= f.text_field :year_begin, :class => 'textfield-1_5' %>
		</div>
		<div class="span-1_5 column">
			<%= product_option_vehicle_model.first_error_on :year_end %>
			<%= f.text_field :year_end, :class => 'textfield-1_5' %>
		</div>
		
		<div class="span-2 last">
			<%= f.submit :add %>
		</div>
	</div>
<% end %>
