<% product_option_vehicle_model = edit %>
<% form_for :product_option_vehicle_model, product_option_vehicle_model,
	:url => manage_product_option_vehicle_model_url(product_option_vehicle_model),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "product_option_vehicle_model_#{product_option_vehicle_model.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#product_option_vehicle_model_#{product_option_vehicle_model.id}').removeClass('editing');",
		:id => "edit_product_option_vehicle_model_form_#{product_option_vehicle_model.id}"
	} do |f| %>
	<div class="span-15 last">
				<div class="span-3">
					<%= product_option_vehicle_model.vehicle_model.name %>
		</div>
				<div class="span-1_5">
			<%= product_option_vehicle_model.first_error_on :year_begin %>
			<%= f.text_field :year_begin, :class => 'span-1_5' %>
		</div>
				<div class="span-1_5">
			<%= product_option_vehicle_model.first_error_on :year_end %>
			<%= f.text_field :year_end, :class => 'span-1_5' %>
		</div>
		
		<div class="span-2 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_product_option_vehicle_model_url(product_option_vehicle_model),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "product_option_vehicle_model_#{product_option_vehicle_model.id}",
	:ajax_success_callback => "$('#product_option_vehicle_model_#{product_option_vehicle_model.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
