<% size_group = show %>
<div class="span-6 last">
<div class="span-3">
<%= size_group.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_size_group_url(size_group),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "size_group_#{size_group.id}",
	:ajax_success_callback => "$('#size_group_#{size_group.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_size_group_url(size_group),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#size_group_#{size_group.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this size_group?' %>
</div>
</div>