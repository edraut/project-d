<% vehicle_model = new %>
<% form_for :vehicle_model, vehicle_model, :url => manage_vehicle_models_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'vehicle_model_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#vehicle_model_name').val(null);",
		:ajax_error_element => 'vehicle_model_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-12 last">
		<div class="span-4 prepend-1">
			<%= vehicle_model.first_error_on :name %>
			<%= f.text_field :name, :class => 'textfield-4' %>
		</div>
		<div class="span-3">
			<%= vehicle_model.first_error_on :name %>
			<%= f.select :vehicle_type_id, VehicleType.all.map{|vt| [vt.name,vt.id]} %>
		</div>
		
		<div class="span-4 last">
			<%= f.hidden_field :vehicle_make_id %>
			<%= f.submit :add %>
		</div>
	</div>
<% end %>
