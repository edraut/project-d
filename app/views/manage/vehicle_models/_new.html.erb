<% vehicle_model = new %>
Add a new vehicle_model</br>
<% form_for :vehicle_model, vehicle_model, :url => manage_vehicle_models_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'vehicle_model_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#vehicle_model_new_link').click();",
		:ajax_error_element => 'vehicle_model_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= vehicle_model.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_vehicle_model_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'vehicle_model_new',
	:id => 'vehicle_model_new_link'
	%>