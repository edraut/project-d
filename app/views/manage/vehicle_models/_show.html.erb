<% vehicle_model = show %>
<div class="span-12 last">
<div class="span-4 prepend-1">
	<%= vehicle_model.name %>
</div>
<div class="span-3">
	<%= vehicle_model.vehicle_type.name %>
</div>
<div class="span-4 last">
<%= link_to 'edit', edit_manage_vehicle_model_url(vehicle_model),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "vehicle_model_#{vehicle_model.id}",
	:ajax_success_callback => "$('#vehicle_model_#{vehicle_model.id}').addClass('editing');" %> | 
<% unless vehicle_model.product_option_vehicle_models.any? %>
<%= link_to 'delete', manage_vehicle_model_url(vehicle_model),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#vehicle_model_#{vehicle_model.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this vehicle_model?' %>
<% end %>
</div>
</div>