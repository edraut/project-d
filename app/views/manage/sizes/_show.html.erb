<% size = show %>
<div class="span-6 last">
<div class="span-3">
<%= size.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_size_url(size),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "size_#{size.id}",
	:ajax_success_callback => "$('#size_#{size.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_size_url(size),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#size_#{size.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this size?' %>
</div>
</div>