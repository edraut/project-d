<% size = new %>
Add a new size</br>
<% form_for :size, size, :url => manage_sizes_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'size_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#size_new_link').show();$('#size_new').empty()",
		:ajax_error_element => 'size_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-7 last">
				<div class="span-4">
			<%= size.first_error_on :name %>
			<%= f.text_field :name, :size => '20' %>
			<%= f.hidden_field :size_group_id %>
			<%= hidden_field_tag 'product_id' if @product %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %> | <a onclick="$('#size_new').empty();$('#size_new_link').show();">cancel</a>
		</div>
	</div>
<% end %>
