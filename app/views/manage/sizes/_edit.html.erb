<% size = edit %>
<% form_for :size, size,
	:url => manage_size_url(size),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "size_#{size.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#size_#{size.id}').removeClass('editing');",
		:id => "edit_size_form_#{size.id}"
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= size.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_size_url(size),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "size_#{size.id}",
	:ajax_success_callback => "$('#size_#{size.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
