<% color_group = show %>
<div class="span-6 last">
<div class="span-3">
<%= color_group.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_color_group_url(color_group),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "color_group_#{color_group.id}",
	:ajax_success_callback => "$('#color_group_#{color_group.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_color_group_url(color_group),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#color_group_#{color_group.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this color_group?' %>
</div>
</div>