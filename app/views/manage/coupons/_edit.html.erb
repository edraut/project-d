<% coupon = edit %>
<% form_for :coupon, coupon,
	:url => manage_coupon_url(coupon),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "coupon_#{coupon.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#coupon_#{coupon.id}').removeClass('editing');",
		:id => "edit_coupon_form_#{coupon.id}"
	} do |f| %>
	<div class="span-18 last">
				<div class="span-3">
			<%= coupon.first_error_on :coupon_code %>
			<%= f.text_field :coupon_code, :class => 'span-3' %>
		</div>
				<div class="span-3">
			$<%= coupon.first_error_on :flat_amount %>
			<%= f.text_field :flat_amount, :class => 'span-3' %>
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :percent_off %>
			<%= f.text_field :percent_off, :class => 'span-3' %>%
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :single_use %>
			<%= f.check_box :single_use, :class => 'span-3' %>
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :active %>
			<%= f.check_box :active, :class => 'span-3' %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_coupon_url(coupon),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "coupon_#{coupon.id}",
	:ajax_success_callback => "$('#coupon_#{coupon.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
