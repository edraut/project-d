<% coupon = show %>
<div class="span-18 last">
<div class="span-3">
<%= coupon.coupon_code %>
</div>
<div class="span-3">
<%= coupon.flat_amount.format %>
</div>
<div class="span-3">
<%= coupon.percent_off %>%
</div>
<div class="span-3">
<%= coupon.single_use ? 'Y' : 'N' %>
</div>
<div class="span-3">
<%= coupon.active ? 'Y' : 'N' %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_coupon_url(coupon),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "coupon_#{coupon.id}",
	:ajax_success_callback => "$('#coupon_#{coupon.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_coupon_url(coupon),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#coupon_#{coupon.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this coupon?' %>
</div>
</div>