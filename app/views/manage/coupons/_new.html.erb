<% coupon = new %>
Add a new coupon</br>
<% form_for :coupon, coupon, :url => manage_coupons_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'coupon_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#coupon_new_link').click();",
		:ajax_error_element => 'coupon_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-18 last">
				<div class="span-3">
			<%= coupon.first_error_on :coupon_code %>
			<%= f.text_field :coupon_code, :class => 'span-3' %>
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :flat_amount %>
			$<%= f.text_field :flat_amount, :class => 'span-3' %>
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :percent_off %>
			<%= f.text_field :percent_off, :class => 'span-3' %>%
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :single_use %>
			<%= f.check_box :single_use, :class => 'span-3' %>
		</div>
				<div class="span-3">
			<%= coupon.first_error_on :active %>
			<%= f.check_box :active, :class => 'span-3' %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_coupon_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'coupon_new',
	:id => 'coupon_new_link'
	%>