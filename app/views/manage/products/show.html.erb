<div class="span-24 last border-top">
	<div class="span-24 last">
		<div class="span-10">
		<h2><%= @product.name %></h2>
		</div>
		<div class="span-6">
			<%= link_to 'edit', edit_manage_product_url(@product) %> | 
			<%= link_to 'delete', manage_product_url(@product), :method => :delete, :confirm => 'Are you sure you want to delete this product?' %>
		</div>
		<div class="span-8 last large loud highlight text-center">
			Product Preview
		</div>
	</div>
	<div class="span-4 append-1">
		<% for product_image in @product.product_images %>
			<div class="span-4 last">
				<%= link_to image_tag(product_image.image.url(:medium)), product_image.image.url(:original), :target => '_blank' %>
			</div>
		<% end %>
	</div>
	<div class="span-10">
		<%= RedCloth.new(@product.description).to_html unless @product.description.blank? %><br/>
	</div>
	<div class="span-2">&nbsp;</div>
	<div class="span-6  border-all last">
		<div class="span-3 text-right field-label">
			category:
		</div>
		<div class="span-3 last">
			<%= @product.category.parent.name %><br/>
		</div>
		<div class="span-3 text-right field-label">
			sub category:
		</div>
		<div class="span-3 last">
			<%= @product.category.name %><br/>
		</div>
		<div class="span-3 text-right">
			&nbsp;
		</div>
		<div class="span-3 last">
			<%= @product.new ? '' : 'used product' %><br/>
		</div>
	</div>
</div>