<div class="span-24 last border-top">
	<div class="span-10">
		<div class="span-10 last">
			<h2><%= @product.name %></h2>
		</div>
		<div class="span-3 text-right field-label">
			description:
		</div>
		<div class="span-7 last">
			<%= RedCloth.new(@product.description).to_html unless @product.description.blank? %><br/>
		</div>
		<div class="span-3 text-right field-label">
			category:
		</div>
		<div class="span-7 last">
			<%= @product.category.parent.name %><br/>
		</div>
		<div class="span-3 text-right field-label">
			sub category:
		</div>
		<div class="span-7 last">
			<%= @product.category.name %><br/>
		</div>
		<div class="span-3 text-right">
			&nbsp;
		</div>
		<div class="span-7 last">
			<%= @product.new ? 'new product' : 'used product' %><br/>
		</div>
		<div class="span-3 text-right field-label">
			images:
		</div>
		<div class="span-7 last">
			<% for product_image in  @product.product_images %>
				<%= image_tag product_image.image(:small) %>
			<% end %>
		</div>
	</div>
	<div class="span-14 last">
		<%= link_to 'edit', edit_manage_product_url(@product) %> | 
		<%= link_to 'delete', manage_product_url(@product), :method => :delete, :confirm => 'Are you sure you want to delete this product?' %> | <%= link_to 'back to product list', manage_products_url %>
	</div>
</div>