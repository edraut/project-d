<div class="span-10 last border-bottom">
Add a new product
</div>
	<div class="span-10 last">
		<% form_for :product, product, :url => manage_products_url(:_method => :post) do |f| %>
		<div class="span-3 text-right">
			name
		</div>
		<div class="span-7 last">
			<%= product.first_error_on :name %>
			<%= f.text_field :name, :class => 'textfield-7' %>
		</div>
		<div class="span-3">
			&nbsp;
		</div>
		<div class="span-7 last">
			<%= f.submit :add %>
		</div>
		<% end %>
	</div>
