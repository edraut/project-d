<% color = edit %>
<% form_for :color, color,
	:url => manage_color_url(color),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "color_#{color.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#color_#{color.id}').removeClass('editing');",
		:id => "edit_color_form_#{color.id}"
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= color.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_color_url(color),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "color_#{color.id}",
	:ajax_success_callback => "$('#color_#{color.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
