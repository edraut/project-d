<% color = new %>
Add a new color</br>
<% form_for :color, color, :url => manage_colors_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'color_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#color_new_link').click();",
		:ajax_error_element => 'color_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= color.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_color_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'color_new',
	:id => 'color_new_link'
	%>