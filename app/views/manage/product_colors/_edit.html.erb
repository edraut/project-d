<% product_color = edit %>
<% form_for :product_color, product_color,
	:url => manage_product_color_url(product_color),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "product_color_#{product_color.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#product_color_#{product_color.id}').removeClass('editing');",
		:id => "edit_product_color_form_#{product_color.id}"
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= product_color.first_error_on :name %>
			<%= f.text_field :name, :size => '12' %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_product_color_url(product_color),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "product_color_#{product_color.id}",
	:ajax_success_callback => "$('#product_color_#{product_color.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
