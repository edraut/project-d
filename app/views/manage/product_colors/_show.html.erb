<% product_color = show %>
<div class="span-6 last">
<div class="span-3">
<%= product_color.color_id %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_product_color_url(product_color),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "product_color_#{product_color.id}",
	:ajax_success_callback => "$('#product_color_#{product_color.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_product_color_url(product_color),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#product_color_#{product_color.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this product_color?' %>
</div>
</div>