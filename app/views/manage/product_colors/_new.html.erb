<% product_color = new %>
Add a new product_color</br>
<% form_for :product_color, product_color, :url => manage_product_colors_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'product_color_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#product_color_new_link').click();",
		:ajax_error_element => 'product_color_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= product_color.first_error_on :color_id %>
			<%= f.text_field :color_id %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_product_color_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'product_color_new',
	:id => 'product_color_new_link'
	%>