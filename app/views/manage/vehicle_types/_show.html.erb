<% vehicle_type = show %>
<div class="span-6 last">
<div class="span-3">
<%= vehicle_type.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_vehicle_type_url(vehicle_type),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "vehicle_type_#{vehicle_type.id}",
	:ajax_success_callback => "$('#vehicle_type_#{vehicle_type.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_vehicle_type_url(vehicle_type),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#vehicle_type_#{vehicle_type.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this vehicle_type?' %>
</div>
</div>