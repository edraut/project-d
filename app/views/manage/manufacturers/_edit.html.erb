<% manufacturer = edit %>
<% form_for :manufacturer, manufacturer,
	:url => manage_manufacturer_url(manufacturer),
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => "manufacturer_#{manufacturer.id}",
		:ajax_method => 'PUT',
		:ajax_success_callback => "$('#manufacturer_#{manufacturer.id}').removeClass('editing');",
		:id => "edit_manufacturer_form_#{manufacturer.id}"
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= manufacturer.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :save %>
<%= link_to 'cancel', manage_manufacturer_url(manufacturer),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "manufacturer_#{manufacturer.id}",
	:ajax_success_callback => "$('#manufacturer_#{manufacturer.id}').removeClass('editing');" %>
		</div>
	</div>
<% end %>
