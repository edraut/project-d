<% manufacturer = new %>
Add a new manufacturer</br>
<% form_for :manufacturer, manufacturer, :url => manage_manufacturers_url,
	:html => {
		:ajax_binding => 'ajax_form',
		:ajax_success_element => 'manufacturer_list',
		:ajax_success_placement => 'append',
		:ajax_success_callback => "$('#manufacturer_new_link').click();",
		:ajax_error_element => 'manufacturer_new',
		:ajax_method => 'POST'
	} do |f| %>
	<div class="span-6 last">
				<div class="span-3">
			<%= manufacturer.first_error_on :name %>
			<%= f.text_field :name %>
		</div>
		
		<div class="span-3 last">
<%= f.submit :add %>
		</div>
	</div>
<% end %>
<%= link_to '', new_manage_manufacturer_url,
 	:ajax_method => 'GET',
	:ajax_binding => 'ajax_link',
	:ajax_success_element => 'manufacturer_new',
	:id => 'manufacturer_new_link'
	%>