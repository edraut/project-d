<% manufacturer = show %>
<div class="span-6 last">
<div class="span-3">
<%= manufacturer.name %>
</div>

<div class="span-3 last">
<%= link_to 'edit', edit_manage_manufacturer_url(manufacturer),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'GET',
	:ajax_success_element => "manufacturer_#{manufacturer.id}",
	:ajax_success_callback => "$('#manufacturer_#{manufacturer.id}').addClass('editing');" %> | 
<%= link_to 'delete', manage_manufacturer_url(manufacturer),
	:ajax_binding => 'ajax_link',
	:ajax_method => 'DELETE',
	:ajax_success_callback => "$('#manufacturer_#{manufacturer.id}').remove();",
	:ajax_confirm => 'Are you sure you want to delete this manufacturer?' %>
</div>
</div>